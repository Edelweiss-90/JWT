{
    "compilerOptions": {
      "target": "es6",                               
      "module": "commonjs",
      "lib": ["es6"],                                  
      "allowJs": true,                        
      "checkJs": true,                            
  
      "outDir": "build",                             
      "rootDir": "src",                             
   
      "strict": true,                                 
      "noImplicitAny": true,                     
      "experimentalDecorators": true,
      "esModuleInterop": true,
   
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
}
